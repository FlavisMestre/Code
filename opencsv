import json
import pandas as pd
import os

def csv_to_json():
    enelsp.csv = r'C:\\Users\\flavimar.pedro\\Documents\\TESTE_ROBO\\Projeto_normal\\enelsp.csv'
    enelsp.json = r'C:\\Users\\flavimar.pedro\\Documents\\TESTE_ROBO\\Projeto_normal\\src\\enelsp.json'
    
    with open(enelsp.csv, 'r', encoding='latin1') as csvfile:
        lines = csvfile.readlines()
        headers = [header.strip().replace('"', '') for header in lines[0].strip().split(',')]
        data = [[value.strip().replace('"', '') for value in line.strip().split(',')] for line in lines[1:]]
    
    json_data = []
    for line in data:
        json_data.append(dict(zip(headers, line)))
   
    with open(enelsp.json, 'w', encoding='utf-8') as jsonfile: # type ignore
        json.dump(json_data, jsonfile, indent=4)
csv_to_json()
